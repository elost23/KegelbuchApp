<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ruhr.ole.kegelbuchapp.Starter">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="72dp"
            app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/editText"
            app:layout_constraintRight_toLeftOf="@+id/button" android:hint="@string/edit_message"/>
    <Button
            android:layout_width="90dp"
            android:layout_height="57dp"
            android:id="@+id/button"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/editText" android:text="@string/button_send"/>
</android.support.constraint.ConstraintLayout>
